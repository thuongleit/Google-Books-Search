<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="me.thuongle.googlebookssearch.model.Result"/>
        <import type="me.thuongle.googlebookssearch.model.NetworkStatus"/>

        <variable
            name="result"
            type="Result"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin"
        app:visible="@{!result.hasData}"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:visible="@{result.isLoading}"
            style="?android:attr/progressBarStyle"/>

        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{result.status.message ?? @string/unknown_error}"
            tools:text="@string/unknown_error"
            app:visible="@{result.isError}"/>
    </LinearLayout>
</layout>

